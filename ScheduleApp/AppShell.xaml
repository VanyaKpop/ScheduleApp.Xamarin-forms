<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="ScheduleApp.AppShell"
       xmlns:views="clr-namespace:ScheduleApp.View"
       TitleColor="Black">
    <TabBar>
        <Tab Title="Расписание"
             Route="Din219" Icon="graduationCap.png">
            <ShellContent Route="Din219" 
                ContentTemplate="{DataTemplate views:Din219Page}"/>
        </Tab>
        <Tab Title="Зачеты"
            Route="Exam" Icon="megaphone.png">
            <ShellContent Route="Exam219" 
                ContentTemplate="{DataTemplate views:Exam}"/>
        </Tab>
    </TabBar>
</Shell>
  