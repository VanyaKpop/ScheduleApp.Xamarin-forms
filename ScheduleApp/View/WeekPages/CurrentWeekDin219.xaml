<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScheduleApp.View.WeekPages.CurrentWeekDin219">
    <ScrollView>
        <StackLayout>
            <!-- Показывает текущую неделю -->
            <Label Text="{Binding Week}" Style="{StaticResource AnotherFontStyle}" Padding="15" FontSize="Large"/>
            
            <!-- Расписание на понедельник -->
            <Frame Style="{StaticResource FrameStyle}">
                <StackLayout>
                    <Label Text="Понедельник" Style="{StaticResource AnotherFontStyle}" FontSize="Subtitle" />
                    <Label Text="{Binding Monday}" Style="{StaticResource FontStyle}" />
                </StackLayout>
            </Frame>
            <!-- Расписание на вторник -->
            <Frame Style="{StaticResource FrameStyle}">
                <StackLayout>
                    <Label Text="Вторник" Style="{StaticResource AnotherFontStyle}" FontSize="Subtitle"/>
                    <Label Text="{Binding Tuesday}" Style="{StaticResource FontStyle}"/>
                </StackLayout>
            </Frame>
            <!-- Расписание на среду -->
            <Frame Style="{StaticResource FrameStyle}">
                <StackLayout>
                    <Label Text="Среда" Style="{StaticResource AnotherFontStyle}" FontSize="Subtitle"/>
                    <Label Text="{Binding Wednesday}" Style="{StaticResource FontStyle}"/>
                </StackLayout>
            </Frame>
            <!-- Расписание на четверг -->
            <Frame Style="{StaticResource FrameStyle}">
                <StackLayout>
                    <Label Text="Четверг" Style="{StaticResource AnotherFontStyle}" FontSize="Subtitle"/>
                    <Label Text="{Binding Thursday}" Style="{StaticResource FontStyle}"/>
                </StackLayout>
            </Frame>
            <!-- Расписание на пятницу -->
            <Frame Style="{StaticResource FrameStyle}">
                <StackLayout>
                    <Label Text="Пятница" Style="{StaticResource AnotherFontStyle}" FontSize="Subtitle"/>
                    <Label Text="{Binding Friday}" Style="{StaticResource FontStyle}"/>
                </StackLayout>
            </Frame>
            <!-- Расписание на субботу -->
            <Frame Style="{StaticResource FrameStyle}" >
                <StackLayout>
                    <Label Text="Суббота" Style="{StaticResource AnotherFontStyle}" FontSize="Subtitle"/>
                    <Label Text="{Binding Saturday}" Style="{StaticResource FontStyle}"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentView>
   
    